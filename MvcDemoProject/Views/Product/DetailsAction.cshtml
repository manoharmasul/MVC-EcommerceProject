@model MvcDemoProject.Models.CustomerProduct

@{
    ViewData["Title"] = "DetailsAction";
}

<h1 class="text-center">Product Details</h1>

<div>
    <div class="container-fluid">

         <div class="row justify-content-center">

              <div class="col-sm-4 border border-3 pt-2 pb-2">

                @{

                   <div class="row">


                        <div class="col-sm-6">

                         @{
                   
                             @if (Model.pimgUrl != null)
                             {
                                string m1, m2, m3;

                                var images = Model.pimgUrl.Split(",");

                                m1 = images[0];

                                m2 = images[1];

                                m3 = images[2];
                        
                                  <div class="card text-dark" style="width:400px;height:700px">

                                       <span class=" ">

                                            <div id="xx" class="carousel slide" data-bs-ride="carousel">

                                                                                    <!-- Indicators/dots -->
                                                 <div class="carousel-indicators">

                                                     <button type="button" data-bs-target="#xx" data-bs-slide-to="0" class="active"></button>

                                                     <button type="button" data-bs-target="#xx" data-bs-slide-to="1"></button>

                                                     <button type="butoon" data-bs-target="#xx" data-bs-slide-to="2"></button>

                                                 </div>
                                                                                        <!-- The slideshow/carousel -->
                                                 <div class="carousel-inner">

                                                      <div class="carousel-item active">

                                                          <img src="@Html.DisplayFor(modelItem => m1)" alt="Laptop Image" width="300px" height="400px" class="d-block w-100">

                                                      </div>

                                                       <div class="carousel-item">

                                                           <img src="@Html.DisplayFor(modelItem => m2)" alt="Laptop Image" width="400px" height="400px" class="d-block w-100">

                                                       </div>

                                                       <div class="carousel-item">

                                                            <img src="@Html.DisplayFor(modelItem => m3)" alt="Laptop Image" width="400px" height="400px" class="d-block w-100">

                                                       </div>

                                                 </div>
                                                                                        <!-- Left and right controls/icons -->
                                                        <button type="button" class="carousel-control-prev" data-bs-target="#xx" data-bs-slide="prev"> <span class="carousel-control-prev-icon"></span></button>

                                                        <button type="button" class="carousel-control-next" data-bs-target="#xx" data-bs-slide="next">

                                                        <span class="carousel-control-next-icon"></span>

                                                        </button>
                                            </div>

                                       </span>
                                     
                                  
                                         <div class="card-body">
                         
                                              Model Id :  @Html.DisplayFor(model => model.Id)

                                              <br>

                                              Model Name :    @Html.DisplayFor(model => model.pName)

                                              <br>

                                              Price :      @Html.DisplayFor(model => model.price)

                                              <br>

                                              Specification :   @Html.DisplayFor(model => model.Specification)

                                         </div>

                                          <div class="card-footer">

                                               <div class="row">

                                                    <div class="col-3">

                                                         @Html.ActionLink("Back", // <-- Link text

                                                         "GetProductsCustomer","Product",

                                                         // <-- Action Method Name

                                                         new { id=Model.Id}, // <-- Route arguments

                                                         new {@class="btn btn-warning"} // <-- htmlArguments

                                                          )

                                                    </div>

                                                    <div class="col-6">


                                                    </div>

                                                    <div class="col-3">


                                                        @Html.ActionLink("Order", // <-- Link text

                                                        "OrderIdtem",

                                                        "Order",

                                                        // <-- Action Method Name

                                                        new { id=Model.Id}, // <-- Route arguments

                                                        new {@class="btn btn-success", data_val="abc"}  // <-- htmlArguments

                                                        )

                                                    </div>

                                               </div>

                                          </div>

                                  </div>
                       
                             }



                         }

                        </div>

                  
                   </div>

                }

              </div>

         </div>

    </div>
                  
</div>
